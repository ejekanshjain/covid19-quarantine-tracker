        $(document).ready(function() {
            $("#dataTable").DataTable();
        });
    </script>
    <script>
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function() {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });

        function viewAdmin(ID) {
            fetch(`superadmin/admin/${ID}`).then(res => res.json()).then(json => {
                if (json.status == 200) {
                    console.log(json)
                    $('#vname').val(json.data.name)
                    $('#vblock').val(json.data.block)
                    $('#vcity').val(json.data.city)
                    $('#vemail').val(json.data.email)
                    $('#vphone').val(json.data.phoneNumber)
                    $('#vstate').val(json.data.state)
                    $('#vcreated').val(json.data.createdAt)
                    $('#vupdated').val(json.data.updatedAt)
                } else {
                    alert("please try again after some time");
                }
            })
        }
    </script>
